RewriteEngine On

# 1. Mencegah user melihat isi direktori (Security)
Options -Indexes

# 2. Mengarahkan HTTPS (Opsional, jika di production nanti)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 3. Menghapus ekstensi .php dari URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# 4. Error Handling (Opsional)
ErrorDocument 404 /404.php